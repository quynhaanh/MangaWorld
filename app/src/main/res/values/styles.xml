    <style name="style_tv_15_with_margin_bottom">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="btn_list_item">
        <item name="android:layout_width">wrap_content</item>
