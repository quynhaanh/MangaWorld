<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChangePassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <!-- TODO: Update blank fragment layout -->
        <ImageButton
            android:id="@+id/btnChangePassClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:text="Đổi mật khẩu"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            style="@style/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu hiện tại:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edCurPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mật khẩu mới:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nhập lại mật khẩu mới:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edConfirmNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnComfirmChangePass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#3F51B5"
            android:text="Đổi mật khẩu"
            android:textSize="15sp" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>